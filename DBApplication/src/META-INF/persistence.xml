<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="DBApplicationPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>EntityClasses.Classes</class>
    <class>EntityClasses.Grades</class>
    <class>EntityClasses.Pay</class>
    <class>EntityClasses.Fee</class>
    <class>EntityClasses.Schools</class>
    <class>EntityClasses.Offices</class>
    <class>EntityClasses.Teachers</class>
    <class>EntityClasses.Departments</class>
    <class>EntityClasses.Staff</class>
    <class>EntityClasses.Students</class>
    <class>EntityClasses.ClassRooms</class>
    <class>EntityClasses.Admin</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://himalayaWin10.cloudapp.net:1433;databaseName=SchoolManagemenySystem"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
